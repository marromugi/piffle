{
  "name": "piffle-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "turbo run typecheck lint && pnpm format:check",
    "prepare": "husky",
    "kokoro": "tsx --env-file=.env packages/cli/src/index.ts -p kokoro",
    "kokoro:voices": "tsx --env-file=.env packages/cli/src/index.ts voices -p kokoro",
    "voicebox": "tsx --env-file=.env packages/cli/src/index.ts -p voicebox",
    "voicebox:voices": "tsx --env-file=.env packages/cli/src/index.ts voices -p voicebox",
    "opencode": "cat demo/article.md | tsx --env-file=.env packages/cli/src/index.ts -s -l openrouter -p kokoro",
    "claude-code": "cat demo/article.md | tsx --env-file=.env packages/cli/src/index.ts -s -l claude-code -p kokoro"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "turbo": "^2.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": "10.26.1"
  },
  "packageManager": "pnpm@10.26.1"
}
