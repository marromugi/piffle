{
  "permissions": {
    "allow": [
      "Bash(pnpm typecheck:*)",
      "Bash(pnpm dev --help:*)",
      "Bash(tree:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm --filter @piffle/cli dev:*)",
      "Bash(npm view:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm run lint:*)"
    ],
    "deny": [
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(bun:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo :*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | xargs -I {} sh -c 'npx prettier --write \"{}\" && npx eslint --fix \"{}\" 2>/dev/null || true'"
          }
        ]
      }
    ]
  }
}
